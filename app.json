{
  "name": "Sha Music Bot",
  "description": "Fast and feature-rich Telegram music bot built with Go",
  "repository": "https://github.com/yourusername/sha-music-bot",
  "logo": "https://telegra.ph/file/sha-music-logo.png",
  "keywords": ["telegram", "music", "bot", "go", "voice-chat"],
  "stack": "container",
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash from my.telegram.org",
      "required": true
    },
    "API_ID": {
      "description": "Your Telegram API ID from my.telegram.org",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram User ID",
      "required": true
    },
    "REDIS_URL": {
      "description": "Redis URL (auto-filled by addon)",
      "required": false
    }
  },
  "addons": [
    {
      "plan": "heroku-redis:mini"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/go"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  }
}